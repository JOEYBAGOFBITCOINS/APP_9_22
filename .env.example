# FuelTrakr Environment Configuration

# Application Mode
# Set to true to enable demo mode with mock data
VITE_DEMO_MODE=false

# Authentication Settings
# Skip authentication (development only)
VITE_SKIP_AUTH=false

# Auto-login on startup (development only)
VITE_AUTO_LOGIN=false

# Default user role for auto-login: 'porter' or 'admin'
VITE_DEFAULT_USER_ROLE=porter

# Debug Settings
# Enable debug mode with additional logging
VITE_DEBUG_MODE=false

# Enable console logging
VITE_CONSOLE_LOGGING=false

# Security Settings
# Require @napleton.com email addresses for registration
VITE_REQUIRE_NAPLETON_EMAIL=false

# Enable mock services instead of real API calls
VITE_ENABLE_MOCK_SERVICES=false

# Supabase Configuration
# Get these values from your Supabase project settings (https://supabase.com/dashboard)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_SUPABASE_PROJECT_ID=your-project-id

# Elasticsearch Configuration
# Get these values from your Elasticsearch cloud deployment or self-hosted instance
# For Elastic Cloud: https://cloud.elastic.co/deployments
VITE_ELASTICSEARCH_NODE=https://your-elasticsearch-instance.es.io:9200
VITE_ELASTICSEARCH_API_KEY=your-elasticsearch-api-key-here
VITE_ELASTICSEARCH_INDEX_PREFIX=fueltrakr

# Elasticsearch Basic Auth (alternative to API key)
# Use either API key OR username/password, not both
# VITE_ELASTICSEARCH_USERNAME=elastic
# VITE_ELASTICSEARCH_PASSWORD=your-password-here

# Elasticsearch Cloud ID (for Elastic Cloud deployments)
# VITE_ELASTICSEARCH_CLOUD_ID=your-cloud-id

# Note: In production, ensure all sensitive keys are properly secured
# and never commit actual .env files to version control
